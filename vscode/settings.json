{
    /**
    * Better Defaults
    **/
    "editor.copyWithSyntaxHighlighting": false,
    "diffEditor.ignoreTrimWhitespace": false,
    "editor.emptySelectionClipboard": false,
    "workbench.editor.enablePreview": false,
    "window.newWindowDimensions": "inherit",
    "editor.multiCursorModifier": "ctrlCmd",
    "files.trimTrailingWhitespace": true,
    "diffEditor.renderSideBySide": false,
    "editor.snippetSuggestions": "top",
    "editor.detectIndentation": false,
    "files.insertFinalNewline": true,
    "files.trimFinalNewlines": true,
    "editor.inlineSuggest.enabled": true,
    "editor.guides.indentation": false,
    "files.autoSave": "onFocusChange",
    "workbench.sideBar.location": "right",
    "workbench.panel.defaultLocation": "right",
    "workbench.layoutControl.enabled": false,
    "workbench.editor.showTabs": "none",
    "editor.minimap.enabled": false,
    "scm.diffDecorations": "none",
    "editor.hover.enabled": false,
    "editor.matchBrackets": "never",
    "workbench.tips.enabled": false,
    "editor.colorDecorators": false,
    "git.decorations.enabled": false,
    "workbench.startupEditor": "none",
    "editor.lightbulb.enabled": "off",
    "editor.selectionHighlight": false,
    "editor.overviewRulerBorder": false,
    "editor.renderLineHighlight": "none",
    "editor.occurrencesHighlight": "off",
    "problems.decorations.enabled": false,
    "editor.renderControlCharacters": false,
    "editor.hideCursorInOverviewRuler": true,
    "editor.gotoLocation.multipleReferences": "goto",
    "editor.gotoLocation.multipleDefinitions": "goto",
    "editor.gotoLocation.multipleDeclarations": "goto",
    "workbench.editor.enablePreviewFromQuickOpen": false,
    "editor.gotoLocation.multipleImplementations": "goto",
    "editor.gotoLocation.multipleTypeDefinitions": "goto",
    "editor.fontFamily": "Fira Code",
    "editor.fontSize": 15,
    "editor.lineHeight": 45,
    "editor.suggestFontSize": 15,
    "editor.suggestLineHeight": 28,
    "terminal.integrated.fontSize": 15,
    "terminal.integrated.lineHeight": 1.5,
    "workbench.fontAliasing": "auto",
    "editor.fontLigatures": true,
    "terminal.integrated.fontLigatures.enabled": true,

    /**
    * Find
    **/
    "search.useIgnoreFiles": false,
    "search.exclude": {
        // Hide everything in /vendor, except the "laravel" and "livewire" folder.
        "**/vendor/{[^l],?[^ai]}*": true,
        // Hide everything in /public, except "index.php"
        "**/public/{[^i],?[^n]}*": true,
        "**/node_modules": true,
        "**/dist": true,
        "**/_ide_helper.php": true,
        "**/composer.lock": true,
        "**/package-lock.json": true,
        "storage": true,
        ".phpunit.result.cache": true
    },

    /**
    * Code
    **/
    // Include "-" in word selection.
    "editor.wordSeparators": "`~!@#%^&*()=+[{]}\\|;:'\",.<>/?",
    "emmet.includeLanguages": {
        "blade": "html",
        "vue-html": "html",
        "vue": "html"
    },
    "files.associations": {
        ".php_cs": "php",
        ".php_cs.dist": "php",
        // "*.blade.php": "php"
    },
    "emmet.triggerExpansionOnTab": true,

    /**
    * PHP
    **/
    "php.suggest.basic": false,

    /**
    * PHP CS Fixer
    **/
    "emeraldwalk.runonsave": {
        "commands": [
            {
                "match": "\\.php$",
                "cmd": "${workspaceFolder}/vendor/bin/pint ${file}"
            },
            {
                "match": "\\.js$",
                "cmd": "eslint --fix ${file}"
            },
            {
                "match": "\\.js$",
                "cmd": "prettier --write ${file}"
            },
            {
                "match": "\\.ts$",
                "cmd": "eslint --fix ${file}"
            },
            {
                "match": "\\.ts$",
                "cmd": "prettier --write ${file}"
            },
            {
                "match": "\\.vue$",
                "cmd": "eslint --fix ${file}"
            },
            {
                "match": "\\.vue$",
                "cmd": "prettier --write ${file}"
            }
        ]
    },
    "explorer.confirmDelete": false,
    "explorer.confirmDragAndDrop": false,
    "extensions.ignoreRecommendations": true,
    "security.workspace.trust.untrustedFiles": "open",
    "editor.accessibilitySupport": "off",
    "editor.hover.sticky": false,
    "debug.toolBarLocation": "hidden",
    "editor.stickyScroll.enabled": false,
    "breadcrumbs.enabled": false,
    "workbench.tree.enableStickyScroll": false,
    "terminal.integrated.enableMultiLinePasteWarning": "never",
    "terminal.integrated.minimumContrastRatio": 1,
    "editor.semanticHighlighting.enabled": true,
    "github.copilot.enable": {
        "*": true,
        "plaintext": false,
        "markdown": false,
        "scminput": false
    },
    "workbench.statusBar.visible": false,
    "notebook.lineNumbers": "on",
    "editor.lineNumbers": "off",
    "workbench.activityBar.location": "hidden",
    "workbench.panel.showLabels": false,
    "window.titleBarStyle": "custom",
    "terminal.integrated.tabs.enabled": false,
    "git.blame.editorDecoration.enabled": false,
    "workbench.editorAssociations": {
        "*.svg": "default"
    },
    "chat.commandCenter.enabled": false,
    "window.commandCenter": false,
    "workbench.colorTheme": "Catppuccin Mocha",
}
